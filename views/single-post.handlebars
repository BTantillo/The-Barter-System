{{! Because the structure of the post itself displays more information, I am leaving the partial alone to be used on the
homepage.handlebar and we will use this as the post page }}
<section class="newPost">
  <article class="post">
    <div class="title">
      <h1>{{post.title}}</h1>
    </div>
    <p>Description: {{post.description}}</p>
    {{!-- <br>
    <div class="comment">{{post.post_url}}</div> --}}
  </article>
  <article>
    <div class="meta">
      {{post.vote_count}} {{format_plural "like" vote_count}} by {{post.user.username}} on
      {{format_date post.created_at}}
      <a href="/post/{{post.id}}">{{format_plural "comment" post.comments.length}}</a>
    </div>


  </article>
  {{#if loggedIn}}
<img style="width: auto; height: 250px;" src="/upload/{{post.file_name}}">
  <form>
    <div>
      <textarea name="comment-body"></textarea>
    </div>

    {{!-- <form action="/api/posts/stats/{{post.id}}" enctype="multipart/form-data" method="post"> --}}
      <div class="form-group">
        {{!-- <input type="file" class="form-control-file" name="uploaded_file"> --}}
        <input type="submit" value="add comment" class="btn btn-default" id="com-btn">
        <button type="button" class="upvote-btn">like</button>

      </div>


</section>
<section class="post-list">

  {{/if}}

  {{> comments post.comments}}

  {{#if loggedIn}}
  <script src="/javascript/comment.js"></script>
  <script src="/javascript/upvote.js"></script>
  {{/if}}
</section>

</form>



