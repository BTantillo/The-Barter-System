{{!-- This file does not use a partial --}}

{{! Because the structure of the post itself displays more information, I am leaving the partial alone to be used on the homepage.handlebar and we will use this as the post page }}

  <article class="post">
    <div class="title"><h1>{{post.title}}</h1></div>
    <p>Description: {{post.description}}</p>
    {{!-- <br>
    <div class="comment">{{post.post_url}}</div> --}}
  </article>
  <article>
    <div class="meta">
      {{post.vote_count}} {{format_plural "like" vote_count}} by {{post.user.username}} on
      {{format_date post.created_at}}
      <a href="/post/{{post.id}}">{{format_plural "comment" post.comments.length}}</a>
    </div>
    <img id="single-post-img" style="width: auto; height: 250px;" src="/upload/{{post.file_name}}">
  
  </article>
<article>
  <div>
    <p>{{post.description}}</p>
  </div>
      {{post.vote_count}} {{format_plural "point" vote_count}} by {{post.user.username}} on {{format_date post.created_at}}
</article>

