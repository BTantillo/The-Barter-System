<article>
  <a href="/dashboard"> &larr; Back to dashboard</a>
  <h2>
    Edit Post
  </h2>
  <form action="#" class="edit-post-form">
    <div id="edit-post-box">
      <input name="post-title" type="text" value="{{post.title}}" />
      <textarea name="post-description" value="{{post.description}}" ></textarea>
      <span>({{format_url post.post_url}})</span>
    </div>
    <div>
      {{post.vote_count}} {{format_plural "like" post.vote_count}} by you on {{format_date post.created_at}}
      |
      <a href="/post/{{post.id}}">{{post.comments.length}} {{format_plural "comment" post.comments.length}}</a>
    </div>
    {{!-- Imported form from newpost.handlebar to test --}}
    {{!-- <form action="/api/posts" enctype="multipart/form-data" method="post"> --}}

    {{!-- <div class="form-group">
        <input type="file" class="form-control-file" name="uploaded_file"> --}}
      {{!-- <input type="submit" value="Upload!" class="btn btn-default"> --}}
    <div id="edit-btns">
    <button type="submit">Save post</button>
    <button type="button" class="delete-post-btn">Delete post</button> </div>
  </form>
</article>

<form class="comment-form" id="comment-form">
  <div>
    <textarea name="comment-body"></textarea>
  </div>

  <div>
    <button type="submit">Add Comment</button>
  </div>
</form>

<div id="edit-com">
{{> comments post.comments}}
</div>



