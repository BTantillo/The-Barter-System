<section>
  <h2>Create New Post</h2>

  <form class="new-post-form" action="/api/posts/newpost" method="post" enctype="multipart/form-data">
    <div>
       <label for = "uploaded_file">Choose A File</label>
    <input type="file" class="form-control-file" name="uploaded_file">
    </div>
    <div>
      <label for="title">Title</label>
      <input type="text" id="post-title" name="title" />
    </div>
    <div>
      <label for="post_url">Link</label>
      <input id="post-url" name="post_url" />
    </div>
    <button type="submit" class="btn">Create</button>
  </form>
</section>

{{#if posts.length}}
<section>
  <h2>Your Posts</h2>
  <ol>
    {{#each posts as |post|}}
    <li>
      {{> post-info post}}
      <a href="/dashboard/edit/{{post.id}}" class="edit-link">Edit post</a>
    </li>
    {{/each}}
  </ol>
</section>
{{/if}}

